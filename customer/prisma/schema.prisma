generator client {
  provider = "prisma-client-js"
}

model Customer {
  id       String      @id @default(cuid())
  email    String
  password String
  salt     String
  phone    String
  address  Address[]
  cart     Product[]
  wishlist WhishItem[]
  orders   Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Address {
  id String @id @default(cuid())

  // Define your address fields here
  Customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String
  postalCode String
  city       String
  country    String

  @@map("addresses")
}

model Order {
  id         String   @id @default(cuid())
  customer   Customer @relation(fields: [customerId], references: [id])
  customerId String
  amount     String
  date       DateTime @default(now())

  @@map("orders")
}

model WhishItem {
  id          String   @id @default(cuid())
  customerId  String
  description String
  price       Int
  Customer    Customer @relation(fields: [customerId], references: [id])

  @@map("whislist_item")
}

model Product {
  id String @id @default(cuid())

  // Define your product fields here
  name String

  banner     String
  price      String
  Customer   Customer? @relation(fields: [customerId], references: [id])
  customerId String?

  @@map("products")
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
